{
    "name": "powerkernel/yii2-skeleton",
    "description": "Yii 2 Skeleton Project Template",
    "keywords": ["yii2", "framework", "skeleton", "project template"],
    "homepage": "https://powerkernel.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/powerkernel/yii2-skeleton/issues?state=open",
        "source": "https://github.com/powerkernel/yii2-skeleton"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0",
        "yiisoft/yii2-bootstrap": "~2.0",
        "yiisoft/yii2-swiftmailer": "~2.0",
        "yiisoft/yii2-jui": "~2.0",
        "yiisoft/yii2-authclient": "~2.1",

        "himiklab/yii2-recaptcha-widget": "*",
        "conquer/select2": "~1.4.0",
        "omnilight/yii2-scheduling": "*",
        "nirvana-msu/yii2-jsonld-helper": "1.0.*@dev",
        "codemix/yii2-localeurls":"*",
        "kotchuprik/yii2-sortable-widgets": "*",

        "powerkernel/yii2-theme-adminlte": "@dev",
        "powerkernel/yii2-jeditable": "@dev",
        "powerkernel/yii2-slugify": "@dev",
        "powerkernel/yii2-fineuploader": "@dev",
        "powerkernel/yii2-tinymce": "@dev",
        "powerkernel/yii2-photoswipe": "@dev",
        "powerkernel/yii2-sms": "@dev"

    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0",
        "yiisoft/yii2-gii": "~2.0",
        "yiisoft/yii2-faker": "~2.0"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}
